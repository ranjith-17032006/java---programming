import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class victorious {

    public static void main(String[] args){
        Scanner rk = new Scanner(System.in);
        int m = rk.nextInt(),n=rk.nextInt(),max = 0;
        for(int i=0;i<m;i++){
            int sum=0;
            for(int j=0;j<n;j++)
                sum += rk.nextInt();
            if(sum > max)
                max = sum;
        }
        System.out.println("Richest Customer Wealth is " + max);
    }
}
